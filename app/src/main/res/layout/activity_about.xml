<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="openscience.crowdsource.video.experiments.AboutActivity">


    <!-- todo fit style as mock up -->
    <TextView
        android:id="@+id/t_Information"
        android:text="Information"
        android:textSize="30dp"
        android:textColor="#ffffff"

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"

        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        />

    <View android:id="@+id/primerdivisor"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_below="@+id/t_Information"
        />

    <Button
        android:id="@+id/b_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit email"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/t_Information"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/abc_ic_go_search_api_mtrl_alpha"
        />

    <Button
        android:id="@+id/b_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Users"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/b_email"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/ico_outer_link"
        />

    <Button
        android:id="@+id/b_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View crowd results"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/b_users"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/ico_outer_link"
        />

    <Button
        android:id="@+id/b_sdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get open-source SDK"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/b_results"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/ico_outer_link"
        />
    <Button
        android:id="@+id/b_cleanup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean up"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/b_sdk"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/abc_ic_go_search_api_mtrl_alpha"
        />

    <Button
        android:id="@+id/b_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/b_cleanup"
        android:background="@color/colorBackground"
        android:drawableRight="@drawable/ico_outer_link"
        />

    <!--<include layout="@layout/app_bar"/>-->
    <LinearLayout android:id="@+id/toolbarmenucontainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorToolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_home_recognize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_home_inactive"
            android:layout_marginLeft="30dp"
            />

        <!-- todo: alight center -->
        <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_log_inactive"
            android:layout_marginLeft="30dp"
            />

        <!-- todo: alight right -->
        <Button
            android:id="@+id/btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:text="About"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_about_active"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

</RelativeLayout>

