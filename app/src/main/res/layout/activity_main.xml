<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/b_about"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_alignParentBottom="true"
        android:minHeight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_sdk"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:minHeight="12dp"
        android:layout_height="wrap_content"
        android:text="Get open-source SDK"
        android:layout_alignTop="@+id/b_about"
        android:layout_toLeftOf="@+id/b_about"
        android:layout_toStartOf="@+id/b_about" />

    <Button
        android:id="@+id/b_stats"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:minHeight="14dp"
        android:layout_height="wrap_content"
        android:text="View crowd results"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_update_exit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="14dp"
        android:text="Update"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/s_scenario"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/b_users"/>


    <Button
        android:id="@+id/recognize"

        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="Recognize"
        android:textSize="16dp"
        android:layout_below="@+id/surfaceView1"
        android:layout_alignTop="@+id/btn_start"
        android:layout_toRightOf="@+id/btn_flip_cam"
        android:layout_toEndOf="@+id/btn_flip_cam" />

    <ImageButton
        android:id="@+id/btn_start"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="24dp"
        android:text="Start/Stop"
        android:layout_below="@+id/surfaceView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/b_start_cam"
        />

    <ImageButton
        android:id="@+id/btn_flip_cam"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="24dp"
        android:text="   "
        android:src="@drawable/b_flip_cam"
        android:layout_below="@+id/surfaceView1"
        android:layout_toRightOf="@+id/btn_start"
        />

    <ImageButton
        android:id="@+id/btnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="24dp"
        android:layout_below="@+id/surfaceView1"
        android:layout_alignParentRight="true"
        android:minHeight="14dp"
        android:src="@drawable/b_open_image"
        android:text="Select an image" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="12dp"
        android:text="Clean log"
        android:id="@+id/b_clean"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users"
        android:id="@+id/b_users"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/b_stats"
        android:layout_toStartOf="@+id/b_stats"
        android:layout_alignBottom="@+id/b_stats" />

    <EditText
        android:id="@+id/log"
        android:inputType="none"
        android:ems="10"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:textColor="#00c800"
        android:background="#000000"
        android:textIsSelectable="false"
        android:editable="false"
        android:textSize="11dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/t_email"
        android:layout_below="@+id/btn_start" />

    <TextView
        android:text="Optional email:  "
        android:textColor="#7f0000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log"
        android:minHeight="12dp"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_above="@+id/b_clean"
        android:layout_toStartOf="@+id/t_email" />

    <TextView
        android:id="@+id/t_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="acknowledge your contributions!"
        android:inputType="textNoSuggestions|text"
        android:minHeight="12dp"
        android:textSize="14dp"
        android:layout_above="@+id/b_about"
        android:layout_alignRight="@+id/b_about"
        android:layout_alignEnd="@+id/b_about"
        android:layout_toEndOf="@+id/btn_start"
        android:layout_alignLeft="@+id/b_sdk"
        android:layout_alignStart="@+id/b_sdk">
    </TextView>
    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/s_scenario"
        android:layout_toEndOf="@+id/b_clean" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/s_scenario"
        android:layout_toEndOf="@+id/b_clean" />
    />

</RelativeLayout>
