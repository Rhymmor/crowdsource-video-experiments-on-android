<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="openscience.crowdsource.video.experiments.ScenariosActivity">

    <!-- header -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/colorBackground"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/consoleHeader"
        >
        <TextView
            android:id="@+id/consoleText"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textSize="30sp"
            android:text="Console"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ico_copy_to_buffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ico_send_by_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha"/>
    </RelativeLayout>
    <!-- todo fit style as mock up -->
    <View android:id="@+id/primerdivisor"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_below="@+id/consoleHeader"
        />

    <EditText
        android:id="@+id/consoleEditText"
        android:inputType="none"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:textColor="#FF65FFDA"
        android:background="@color/colorBackground"
        android:textIsSelectable="false"
        android:editable="false"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/consoleHeader"
        android:enabled="true"
        />

    <LinearLayout
        android:id="@+id/toolbarmenucontainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/colorToolbar"
        >

        <Button
            android:id="@+id/btn_home_recognizeConsole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_home_inactive"
            style="?android:attr/borderlessButtonStyle"
            />

        <!-- todo: alight center -->
        <Button
            android:id="@+id/btn_console"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:text="Console"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_console_active"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <!-- todo: alight right -->
        <Button
            android:id="@+id/btn_infoConsole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:textColor="#ffffff"
            android:background="@color/colorToolbar"
            android:drawableTop="@drawable/b_info_inactive"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>

    <!--<include layout="@layout/app_bar"/>-->
</RelativeLayout>
